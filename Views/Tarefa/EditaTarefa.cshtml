@model trilha_net_mvc_desafio.Models.Tarefa;

@{
    ViewData["Title"] = "Editar Tarefa";
}

<h1>Editando tarefa => @Html.DisplayFor(t=>t.Titulo)</h1>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditaTarefa">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<EnumStatusTarefa>()">
                    <option value="">---Selecione o Status---</option>
                </select>
            </div>
            <br>
            <div class="form-group row">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" asp-items="Calendar"/>
            </div>         
            <br/>
            <div class="form-group">
                <input type="submit" value="Editar Tarefa" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br>
<div>
<a asp-action="Index" class="btn btn-danger">Cancelar</a>
</div>